<?xml version="1.0"?>
<project name="search" default="jar">

  <target name="clean" description="Remove all generated files">
    <delete dir="classes"/>
    <delete file="search.jar"/>
    <delete> 
      <fileset defaultexcludes="no" dir="." includes="**/*~"/> 
    </delete>
  </target>

  <target name="compile" description="Compile the Java-program">
    <mkdir dir="classes"/>
    <javac srcdir="src" destdir="classes" debug="true"
	   debuglevel="lines,vars,source" includeantruntime="false"/>
  </target>

  <target name="jar" depends="compile" description="Make a JAR-file">
    <jar destfile="search.jar">
      <fileset dir="classes" includes="**/*.class"/>
      <manifest>
	<attribute name="Main-Class" value="no.uio.ifi.lt.testing.ObligCTest"/>
      </manifest>
    </jar>
  </target>
</project>
